# Backend Local Development Configuration
# Copy this file to .env in the same directory for local development

# Database Configuration (Docker containers)
DB_HOST=db
POSTGRES_DB=plantex_dev
POSTGRES_USER=plantex_dev
POSTGRES_PASSWORD=dev_password_123

# Django Configuration
DEBUG=True
DJANGO_SECRET_KEY=local-dev-secret-key-not-secure-for-development-only-12345678

# Email Configuration (Development - can use fake values)
MAILGUN_API_KEY=dev-fake-mailgun-key
MAILGUN_SENDER_DOMAIN=localhost
FROM_EMAIL=dev@localhost

# Development Notes:
# - DEBUG=True enables Django debugging features
# - Database passwords can be simple for local development
# - Email settings are for testing only - emails won't be sent
# - Secret key is not secure - only for development use
# - All containers communicate via Docker network names (DB_HOST=db)